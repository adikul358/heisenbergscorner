<section id="user-form" class="projects-section bg-black pb-0" style='padding-top: 0rem 0'>
  <div class="container">
    <div class="d-flex justify-content-center">
      <hr style="border-color: white; width:8rem; border-width:.3rem; margin:0">
    </div>
    <div class="text-center">
      <h3 class="text-white mt-3 mb-2">Enter Your Details</h3>
    </div>

    <form action="/submit-answer/" method="POST">
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">

        <div class="col-lg-12 mb-2">
          <div class="question-card text-center project ">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-left">
                <div class="mb-3 form-inline d-flex">
                  <input type="text" class="form-control flex-fill mr-0 mb-3 mb-sm-0" id="name" name="name"
                    placeholder="Full Name">
                </div>
                <div class="mb-3 form-inline d-flex">
                  <input type="text" class="form-control flex-fill mr-0 mb-3 mb-sm-0" id="email" name="email"
                    placeholder="Email">
                </div>
                <div class="mb-3 form-inline d-flex row">
                  <div class="col-4 col-lg-2">
                     <div class="select">  
                        <select name='grade' id='grade'>
                            <option value="">Grade</option>
                            <option value="12">12</option>
                            <option value="11">11</option>
                            <option value="10">10</option>
                            <option value="9">9</option>
                            <option value="8">8</option>
                            <option value="7">7</option>
                            <option value="6">6</option>
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                            <option value="1">1</option>
                            <option value="KG">KG</option>
                            <option value="Nursery">Nursery</option>
                        </select>
                        <div class="select_arrow">
                        </div>
                    </div>
                  </div>
                  <div class="col-8 col-lg-4">
                    <div class="select">
                        <select name='section' id='section'>
                            <option value=''>Section</option>
                            <option value='Corbett'>Corbett</option>
                            <option value='Sariska'>Sariska</option>
                            <option value='Gir'>Gir</option>
                            <option value='Ranthambore'>Ranthambore</option>
                            <option value='Kanha'>Kanha</option>
                        </select>
                        <div class="select_arrow">
                        </div>
                    </div>
                  </div>
                </div>
                <div class="form-inline d-flex">
                  <div class="control-group">
                  <label class="control control-checkbox">
                      Not a Student
                      <input id="nas" type="checkbox" checked="checked" />
                      <div class="control_indicator"></div>
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-100 pr-3">
          <button type="submit" class="float-right mt-5 btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  </div>
</section>