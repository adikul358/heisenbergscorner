<section id="user-form" class="projects-section bg-black pb-0" style='padding-top: 0rem 0'>
  <div class="container">
    <div class="text-center">
      <h1 class="text-white mt-3 mb-5">Answers Dashboard</h1>
    </div>
    {{#each data}}
    <div class="d-flex justify-content-center mt-3">
      <hr style="border-color: white; width:8rem; border-width:.3rem; margin:0">
    </div>
    <div class="text-center">
      <h3 class="text-white mt-3 mb-2">Week {{@key}}</h3>
    </div>

    <div class="row justify-content-center no-gutters mb-5 mb-lg-0">

      <div class="col-lg-12 mb-2">
        <div class="question-card text-center project ">
          <div class="d-flex h-100">
            <div class="project-text w-100 my-auto text-left p-4">
              <table class="table table-dark" style="background: transparent">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Answer 1</th>
                    <th scope="col">Answer 2</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each this}}
                  <tr id={{this._id}}>
                    <td scope="row">{{@index}}</th>
                    <td>{{this.name}}</td>
                    <td class="ans a1">{{this.answers.[0]}}</td>
                    <td class="ans a2">{{this.answers.[1]}}</td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
    <div class="w-100 pr-3">
      <button type="submit" class="float-right mt-5 btn btn-primary mb-3">Submit</button>
    </div>
  </div>
</section>