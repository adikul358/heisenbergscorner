<section id="user-form" class="projects-section bg-black pb-0" style='padding-top: 0rem 0'>
  <div class="container">
    <div class="d-flex justify-content-center">
      <hr style="border-color: white; width:8rem; border-width:.3rem; margin:0">
    </div>
    <div class="text-center">
      <h3 class="text-white mt-3 mb-2">Enter Questions - Week {{week}}</h3>
    </div>

    <form action="/submit-question/" method="POST">
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">

        <div class="col-lg-12 mb-2">
          <div class="question-card text-center project ">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-left">
                <div class="mb-3 form-inline d-flex">
                  <h4 class="text-white mb-3">Question 1</h4>
                  <input required type="text" class="form-control flex-fill mr-0 mb-3" id="question1" name="question1" placeholder="Question">
                  <input required type="text" class="form-control flex-fill mr-0 mb-3" id="qanswer1" name="qanswer1" placeholder="Answer">
                </div>
                <br>
                <div class="mb-3 form-inline d-flex">
                  <h4 class="text-white mb-3">Question 2</h4>
                  <input required type="text" class="form-control flex-fill mr-0 mb-3" id="question2" name="question2" placeholder="Question">
                  <input required type="text" class="form-control flex-fill mr-0 mb-3" id="qanswer2" name="qanswer2" placeholder="Answer">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="w-100 pr-3">
          <button type="submit" class="float-right mt-5 btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  </div>
</section>