<section id="weeklyquiz" class="projects-section bg-black" style="padding-top: 2rem">
  <div class="container">

    <div class="d-flex justify-content-center">
      <hr style="border-color: white; width:8rem; border-width:.3rem; margin:0">
    </div>

    <div class="text-center">
      <h1 class="text-white mt-4 mb-2">Weekly Quiz</h1>
      <h3 class="text-white mb-5">Week: {{week}}</h3>
    </div>

    <form action="/submit-answer/user-data/" method="POST">
      <div class="row justify-content-center no-gutters mb-5 mb-lg-0">
        <div class="col-lg-12 mb-5">
          <div class="question-card text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-left">
                <h4 class="text-white">Question 1</h4>
                <p class="mb-0 text-white-50">{{questions.[0]}}</p>
                <hr class="d-block mb-5 ml-0">
                <div class="form-inline d-flex">
                  <input type="text" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" id="answer1"
                    name="answer1" placeholder="Your Answer">
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="col-lg-12">
          <div class="question-card text-center h-100 project">
            <div class="d-flex h-100">
              <div class="project-text w-100 my-auto text-left">
                <h4 class="text-white">Question 2</h4>
                <p class="mb-0 text-white-50">{{questions.[1]}}</p>
                <hr class="d-block mb-5 ml-0">
                <div class="form-inline d-flex">
                  <input type="text" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" id="answer2"
                    name="answer2" placeholder="Your Answer">
                </div>
              </div>
            </div>
          </div>
        </div>
      
        <div class="w-100 pr-3">
          <button type="submit" class="float-right mt-5 btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
  </div>
</section>